@model ArriendoDeAutosASP.Models.Email

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Welcome!</h1>
<h2>Contact mail: Tayrac@gmail.com</h2>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailFrom" class="control-label"></label>
                <input asp-for="EmailFrom" class="form-control" placeholder="example@email.com"/>
                <span asp-validation-for="EmailFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailTo" class="control-label"></label>
                <input asp-for="EmailTo" class="form-control" value="tayrac@gmail.com" placeholder="tayrac@gmail.com" />
                <span asp-validation-for="EmailTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailSubject" class="control-label"></label>
                <input asp-for="EmailSubject" class="form-control" placeholder="Subject..."/>
                <span asp-validation-for="EmailSubject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailBody" class="control-label"></label>
                <textarea asp-for="EmailBody" class="form-control" style="overflow:auto;resize:none" rows="13" cols="20"></textarea>
                <span asp-validation-for="EmailBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary"/>
            </div>
        </form>
    </div>
    
</div>

